{
  "name": "codeigniter4/appstarter",
  "type": "project",
  "description": "CodeIgniter4 starter app",
  "homepage": "https://codeigniter.com",
  "license": "MIT",
  "require": {
    "php": "^7.3||^8.0",
    "abraham/twitteroauth": "3.3.0",
    "codeigniter4/framework": "v4.1.9",
    "simplepie/simplepie": "1.5.8"
  },
  "require-dev": {
    "deployer/deployer": "v7.0.0-rc.4",
    "drupal/coder": "8.3.14",
    "mikey179/vfsstream": "1.6.10",
    "phpmd/phpmd": "2.11.1",
    "phpunit/phpunit": "9.5.13",
    "squizlabs/php_codesniffer": "3.6.2",
    "tatter/patches": "v2.0.4"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "sort-packages": true,
    "prefer-stable": true
  },
  "scripts": {
    "test": "phpunit",
    "lint": [
      "phpcs --standard=phpcs.xml -v --colors  --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer,$($COMPOSER_BINARY config vendor-dir)/sirbrillig/phpcs-variable-analysis,$($COMPOSER_BINARY config vendor-dir)/slevomat/coding-standard",
      "vendor/bin/phpmd app/Controllers ansi phpmd.xml",
      "vendor/bin/phpmd app/Helpers ansi phpmd.xml",
      "vendor/bin/phpmd app/Models ansi phpmd.xml",
      "vendor/bin/phpmd app/Views ansi phpmd.xml --exclude app/Views/errors*"
    ]
  },
  "support": {
    "forum": "http://forum.codeigniter.com/",
    "source": "https://github.com/codeigniter4/CodeIgniter4",
    "slack": "https://codeigniterchat.slack.com"
  }
}
