{
  "name": "codeigniter4/appstarter",
  "type": "project",
  "description": "CodeIgniter4 starter app",
  "homepage": "https://codeigniter.com",
  "license": "MIT",
  "require": {
    "php": "^7.3||^8.0",
    "abraham/twitteroauth": "3.2.0",
    "codeigniter4/framework": "4.1.5",
    "simplepie/simplepie": "1.5.6"
  },
  "require-dev": {
    "deployer/dist": "^6.8",
    "deployer/recipes": "^6.2",
    "drupal/coder": "8.3.13",
    "mikey179/vfsstream": "1.6.10",
    "phpmd/phpmd": "2.11.0",
    "phpunit/phpunit": "9.5.10",
    "squizlabs/php_codesniffer": "3.6.1",
    "tatter/patches": "2.0.3"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "lint": [
      "phpcs -v --standard=phpcs.xml --config-set installed_paths ~/.composer/vendor/drupal/coder/coder_sniffer",
      "vendor/bin/phpmd app/Controllers ansi phpmd.xml",
      "vendor/bin/phpmd app/Helpers ansi phpmd.xml",
      "vendor/bin/phpmd app/Models ansi phpmd.xml",
      "vendor/bin/phpmd app/Views ansi phpmd.xml --exclude app/Views/errors*"
    ]
  },
  "support": {
    "forum": "http://forum.codeigniter.com/",
    "source": "https://github.com/codeigniter4/CodeIgniter4",
    "slack": "https://codeigniterchat.slack.com"
  }
}
