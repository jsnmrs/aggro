{
  "name": "codeigniter4/appstarter",
  "type": "project",
  "description": "CodeIgniter4 starter app",
  "homepage": "https://codeigniter.com",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "codeigniter4/framework": "^4.6",
    "friendsofphp/php-cs-fixer": "^3.92",
    "nexusphp/cs-config": "^3.27",
    "nikic/php-parser": "^5.7",
    "pdepend/pdepend": "^2.16",
    "sentry/sentry": "^4.19",
    "simplepie/simplepie": "^1.9",
    "symfony/config": "^7.4",
    "symfony/dependency-injection": "^7.4",
    "symfony/var-exporter": "^8.0",
    "symfony/yaml": "^8.0"
  },
  "require-dev": {
    "codeigniter/coding-standard": "^1.8",
    "deployer/deployer": "^7.5",
    "mikey179/vfsstream": "^1.6",
    "phpmd/phpmd": "^2.15",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5",
    "sebastian/complexity": "^4.0",
    "sebastian/lines-of-code": "^3.0",
    "squizlabs/php_codesniffer": "^4.0",
    "tatter/patches": "^2.1"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "sort-packages": true,
    "prefer-stable": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "test": "phpunit --no-coverage",
    "test:unit": "phpunit tests/unit",
    "test:feature": "phpunit tests/feature",
    "test:coverage": "phpunit --coverage-html build/logs/html",
    "phpcs": "phpcs --standard=phpcs.xml -v --colors",
    "phpcbf": "phpcbf --standard=phpcs.xml -v --colors --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer,$($COMPOSER_BINARY config vendor-dir)/sirbrillig/phpcs-variable-analysis,$($COMPOSER_BINARY config vendor-dir)/slevomat/coding-standard",
    "phpmd": [
      "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpmd app/Controllers ansi phpmd.xml",
      "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpmd app/Helpers ansi phpmd.xml",
      "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpmd app/Models ansi phpmd.xml",
      "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpmd app/Views ansi phpmd.xml --exclude app/Views/errors*"
    ],
    "phpfix": [
      "vendor/bin/php-cs-fixer fix --verbose"
    ],
    "lint": [
      "composer phpfix",
      "composer phpcs",
      "composer phpmd",
      "composer phpstan"
    ],
    "phpstan": "phpstan analyse --configuration=phpstan.neon"
  },
  "support": {
    "forum": "http://forum.codeigniter.com/",
    "source": "https://github.com/codeigniter4/CodeIgniter4",
    "slack": "https://codeigniterchat.slack.com"
  }
}
